<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.EditarVeiculoController">
    <children>
        <MenuBar VBox.vgrow="NEVER">
            <menus>            
                <Menu mnemonicParsing="false" onAction="#voltarAoMenu" text="Menu">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#voltarAoMenu" text="Menu" />
                    </items>
                </Menu>
            </menus>
        
        </MenuBar>
        <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="500.0" prefWidth="800.0" VBox.vgrow="ALWAYS">
            <children>
                <Label layoutX="255.0" layoutY="45.0" text="Editar Veículo">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <Label layoutX="124.0" layoutY="101.0" text="Selecionar Veiculo" />
                <Label layoutX="124.0" layoutY="147.0" text="Código" />
                <Label layoutX="124.0" layoutY="188.0" text="Marca" />
                <Label layoutX="124.0" layoutY="226.0" text="Modelo" />
                <Label layoutX="124.0" layoutY="268.0" text="Placa" />
                <TextField fx:id="campoCodigo" layoutX="193.0" layoutY="143.0" prefHeight="26.0" prefWidth="254.0" />
                <TextField fx:id="campoMarca" layoutX="193.0" layoutY="184.0" prefHeight="26.0" prefWidth="254.0" />
                <TextField fx:id="campoModelo" layoutX="193.0" layoutY="222.0" prefHeight="26.0" prefWidth="254.0" />
                <TextField fx:id="campoPlaca" layoutX="193.0" layoutY="264.0" prefHeight="26.0" prefWidth="254.0" />
                <Button fx:id="botaoCancelar" layoutX="229.0" layoutY="313.0" mnemonicParsing="false" onAction="#voltarAoMenu" text="Cancelar" />
                <Button fx:id="botaoSalvar" layoutX="329.0" layoutY="313.0" mnemonicParsing="false" onAction="#editarVeiculo" prefHeight="26.0" prefWidth="62.0" text="Salvar" />
            <ComboBox fx:id="comboVeiculos" layoutX="297.0" layoutY="97.0" onAction="#initialize" prefWidth="150.0" />
            </children>
        </AnchorPane>
    </children>
</VBox>
